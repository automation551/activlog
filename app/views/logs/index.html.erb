<div id="logs">
	<h1>OCT Help Desk - Daily Visitor Activity Log</h1>

	<% form_for(@log) do |f| %>
		<%= f.error_messages %>

		<p>
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :contact_type %><br />
			<%= f.select :contact_type,
						  Log::CONTACT_TYPES,
						 :prompt => "Select your status"
			%>
		</p>
		<p>
			<%= f.label :description %><br />
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.label :social_security %><br />
			<%= f.password_field :social_security, :maxlength => 4, :size => 4 %>
		</p>
		<p>
			<%= f.submit 'Sign in' %>
		</p>
	<% end %>

	<h1>Recent Visitors</h1>

	<table id="recent_logs_by_time" class="log-report">
		<tbody>
			<% @logs.each do |log| %>
			<tr id="" class="log-entry">
				<td class="time">
					<%=h log.updated_at.strftime("%I:%S %p") %>
				</td>
				<td class="name">
					<%=h log.name %>
				</td>
				<td class="type">
					<%=h log.contact_type %>
				</td>
				<td class="description">
					<p><%=h log.description %></p>
				</td>
				<% if current_user %>
				<td class="social-security">
					<p><%=h log.social_security %></p>
				</td>
				<% end %>
				<td class="table-options">
					<div>
					<% if current_user %>
						<%= link_to 'Edit', edit_log_path(log) %>
						<%= link_to 'Destroy', log, :confirm => 'Are you sure?', :method => :delete %>
					<% end %>
					</div>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>